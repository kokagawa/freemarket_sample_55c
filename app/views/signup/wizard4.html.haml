= form_for @user, url: wizard5_signup_index_path, method: :get, html: {class: 'forth-main__box'} do |f|            
  .middle-box-send
    .middle-contents-send   
      .middle-contents-header
        発送元・お届け先住所入力
      .middle-contents-bottom
        .point-board
          お名前
          .little-ob
            必須
        = f.text_field :address_first_name, placeholder: '例) 山田', class: "middle-contents-bottom__form-step4"
        = f.text_field :address_last_name, placeholder: '例) 彩', class: "middle-contents-bottom__form-step4"
        .clear-board
        .point-board
          お名前カナ
          .little-ob
            必須 
        = f.text_field :address_first_name_kana, placeholder: '例) ヤマダ', class: "middle-contents-bottom__form-step4"
        = f.text_field :address_last_name_kana, placeholder: '例) アヤ', class: "middle-contents-bottom__form-step4"      
        .clear-board
        .point-board
          郵便番号
          .little-ob
            必須 
        = f.text_field :address_number, placeholder: '例) 123-4567', class: "middle-contents-bottom__form-step4"           
        .clear-board
        .point-board
          都道府県
          .little-ob
            必須 
        = f.text_field :address_prefecture, placeholder: '北海道', class: "middle-contents-bottom__form-step4"    
        .clear-board
        .point-board
          市区町村
          .little-ob
            必須 
        = f.text_field :address_name, placeholder: '例) 横浜市緑区', class: "middle-contents-bottom__form-step4"    
        .clear-board
        .point-board
          番地
          .little-ob
            必須 
        = f.text_field :address_block, placeholder: '例) 青山1-1-1', class: "middle-contents-bottom__form-step4"    
        .clear-board
        .point-board
          建物名
          .little-ob-gray
            任意
        = f.text_field :address_building, placeholder: '例) 柳ビル103', class: "middle-contents-bottom__form-step4"    
        .clear-board
        .point-board
          電話
          .little-ob-gray
            任意 
        = f.text_field :address_phone_number, placeholder: '例) 09012345678', class: "middle-contents-bottom__form-step4"    
        = f.submit " 次へ進む", class: "middle-contents-bottom__next"                      
        
      

