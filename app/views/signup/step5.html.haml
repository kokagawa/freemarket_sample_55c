= form_for @user, url: signup_index_path, method: :post, html: {class: 'fifth-main__box'} do |f|       
  .middle-box-pays
    .middle-contents-pays   
      .middle-contents-header
        支払い方法
      .middle-contents-bottom
        .point-board
          カード番号
          .little-ob
            必須   
        = f.text_field :card_number, placeholder: '半角数字のみ', class: "middle-contents-bottom__form-pays"     
        .card-board
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2561606804', :size =>'50x100'
        .card-board-1  
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2561606804', :size =>'30x60'
        .card-board-2
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2561606804', :size =>'35x70'

        .card-board-3
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2561606804', :size =>'32x64'

        .card-board-4
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2561606804', :size =>'30x25'

        .card-board-5
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2561606804', :size =>'35x70'

        .card-board-6
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2561606804', :size =>'35x70' 
        .clear-board
        .point-board
          有効期限
          .little-ob
            必須   
        = f.text_field :effectiveness_month, placeholder: '01', class: "middle-contents-bottom__form-mini"     
        .middle-contents-bottom__date
          月
        = f.text_field :effectiveness_year, placeholder: '19', class: "middle-contents-bottom__form-mini-right"   
        .middle-contents-bottom__date
          年  
        .clear-board  
        .point-board
          セキュリティコード
          .little-ob
            必須  
        = f.text_field :security_number, placeholder: 'カード背面４桁もしくは３桁の番号', class: "middle-contents-bottom__form-pays"       
        .text-board
          ?
          .card-circle
        .card-text 
          カード裏面の番号とは？ 
        = f.submit " 次へ進む", class: "middle-contents-bottom__to-next"    
        
        
   

