
.default_container
  = render "shared/header"
  .back
    .head_space
    .details_box
      .name
        #{@item.name}
      .image  
        - @item.images.each do |image|
          = image_tag(image, width:100, height:100)
      .data
        %table{:border => ""}
          %tr
            %td
              カテゴリー
            %td #{@item.category}
          %tr
            %td
              ブランド
            %td #{@item.brand}
          %tr
            %td
              商品の状態
            %td #{@item.status}
          %tr
            %td
              配送料の負担
            %td  #{@item.cost}
          %tr
            %td
              配送源の地域
            %td #{@item.area}
      .price
        ¥#{@item.price}   
        .unit
          (税込)送料込み
      .buy_space
        .buy_box
          = link_to "購入画面に進む", "/buy/#{@item.id}", data: {"turbolinks" => false}
            
      .description
        #{@item.description}         


          

