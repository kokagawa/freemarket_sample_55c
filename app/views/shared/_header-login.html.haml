.header
  .header-container
    .upper-container.clearfix
      .logo
        = link_to image_tag('https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg')
      %form(action="https://www.mercari.com/jp/search/" class="pc-header-form")
        %input(class="input-default" name="keyword" placeholder="何かお探しですか？" type="search" value="")/
        %i.searchButton
          = link_to "#" do
            = fa_icon "search"
    .lower-container.clearfix
      .lower-container__left
        .category
          = link_to "#" do
            = fa_icon "th-list" ,text: "カテゴリーから探す"
          .category__pulldown
            %ul.category__pulldown__lists
        .brand
          = link_to "#" do
            = fa_icon "tags",text: "ブランドから探す"
          .brand__pulldown
            %ul.brand__pulldown__list
      .lower-contaimer__right
        .registration-button
          = link_to new_user_registration_path do
            新規会員登録
        .login-button
          = link_to new_user_session_path do
            ログイン
        
        
