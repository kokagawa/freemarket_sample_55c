.header
  .header_container
    .upper_container
      .logo
        = link_to image_tag('https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg')
      .searchForm
        %form(action="https://www.mercari.com/jp/search/" class="pc-header-form")
          %input(class="input-default" name="keyword" placeholder="何かお探しですか？" type="“search”" value="")/
          %i(class="icon-search")
    .lower_container
      .lower_container__left
        .category
          = link_to "#" do
            = fa_icon "th-list" ,text: "カテゴリーから探す"
          .category__pulldown
            %ul.category__pulldown__lists
        .brand
          = link_to "#" do
            = fa_icon "tags",text: "ブランドから探す"
          .brand__pulldown
            %ul.brand__pulldown__list
      .lower_container__right
        %ul.navis
          %a.navi
            = link_to "#" do
              = fa_icon "heart", text: "いいね！一覧"
          %a.navi
            = link_to "#" do
              = fa_icon "bell", text: "お知らせ"
          %a.navi
            = link_to "#" do
              = fa_icon "check", text: "やることリスト"
          %a.navi
            = link_to image_tag("https://static.mercdn.net/images/member_photo_noimage_thumb.png", size:"32x32",)
            %span
              =link_to "マイページ"