.header
  .header-container
    .upper-container.clearfix
      .logo
        = link_to image_tag('https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg')
      %form(action="https://www.mercari.com/jp/search/" class="pc-header-form")
        %input(class="input-default" name="keyword" placeholder="何かお探しですか？" type="search" value="")/
        %i.searchButton
          = link_to "#" do
            = fa_icon "search"   
    .lower-container.clearfix
      .lower-container__left
        .category
          = link_to "", data: {"turbolinks" => false} do
            = fa_icon "th-list" ,text: "カテゴリーから探す"       
          .category__pulldown
            %table{:border => "0"} 
              %tr{"data-href" => "http://ja.wikipedia.org/wiki/%E6%9D%B1%E4%BA%AC"}        
                %th.a レディース
              %tr           
                %th.b メンズ
              %tr            
                %th.c ベビー・キッズ
              %tr             
                %th.d インテリア・住まい・小物
              %tr           
                %th.e 本・音楽・ゲーム
              %tr            
                %th.f コスメ・香水・美容
              %tr  
                %th.g 家電・スマホ・カメラ
              %tr           
                %th.h スポーツ・レジャー
              %tr            
                %th.i ハンドメイド
              %tr  
                %th.j チケット
              %tr           
                %th.k 自動車・オートバイ
              %tr            
                %th.l その他
              %tr     
                %th.m カテゴリー一覧                 
              %tr 
        .brand
          = link_to "", data: {"turbolinks" => false} do
            = fa_icon "tags", text: "ブランドから探す"
          .brand__pulldown
            %table{:border => "0"} 
              %tr{"data-href" => "http://ja.wikipedia.org/wiki/%E6%9D%B1%E4%BA%AC"}        
                %th.a シャネル
              %tr           
                %th.b ナイキ
              %tr            
                %th.c ルイヴィトン
              %tr    
                %th.f シュプリーム
              %tr           
                %th.d アディダス
              %tr           
                %th.e ブランド一覧
              %tr            
               
      %ul.lower-container__right
        %li.navis
          .navi
            = link_to "", data: {"turbolinks" => false} do
              = fa_icon "heart"
              いいね！一覧
           
        %li.navis
          .navi-first
            = link_to "", data: {"turbolinks" => false} do
              = fa_icon "bell"
              お知らせ
            .navi-first__pulldown   
              %table{:border => "0"} 
                %tr{"data-href" => "http://ja.wikipedia.org/wiki/%E6%9D%B1%E4%BA%AC"}        
                  %th.n 事務局から個別メッセージ&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;『ログイン通知』 
                  
                %tr           
                  %th.o 《友達・家族を招待すると・家族を招待するとP.1000プレゼント・家族を招待するとP.1000プレゼント》お互いの招待コードを交換して...
                %tr            
                 
                 
                         
        %li.navis
          .navi-second
            = link_to "", data: {"turbolinks" => false} do
              = fa_icon "check"
              やることリスト
            .navi-second__pulldown-second 
              %table{:border => "0"} 
                %tr{"data-href" => "http://ja.wikipedia.org/wiki/%E6%9D%B1%E4%BA%AC"}        
                  %th.p ご登録のメールアドレスに認証メールを送りました。
                %tr           
                  
               
            
        %li.navis
          .mypage
            =link_to  mypages_path, data: {"turbolinks" => false} do
              = image_tag("https://static.mercdn.net/images/member_photo_noimage_thumb.png", size:"32x32",)
              マイページ
            .mypage__pulldown 
              .mypage-btn
                .mypage-btn__user 
                  = image_tag("https://static.mercdn.net/images/member_photo_noimage_thumb.png", size:"60x60",)
                  .mypage-side
                    .mypage-side__main
                      %ul.mypage-side__main__box
                        %li.mypage-side__main__box__list 
                          = link_to 'いいね！一覧', class: 'mypage__sidebar-main__box__good'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list
                          = link_to '出品する', class: 'mypage__sidebar-main__box__sell'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list 
                          = link_to '出品した商品 - 出品中', class: 'mypage__sidebar-main__box__listing'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list 
                          = link_to '出品した商品 - 取引中', class: 'mypage__sidebar-main__box__listing-inprogress'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list 
                          = link_to '出品した商品 - 売却済み', class: 'mypage__sidebar-main__box__listing-completed'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list
                          = link_to '購入した商品 - 売却済み', class: 'mypage__sidebar-main__box__purchace'
                          / 矢印アイコン
                        %li.mypage-side__main__box__list 
                          = link_to '購入した商品 - 過去の取引', class: 'mypage__sidebar-main__box__purchaced'
                          / 矢印アイコン
                          
                        